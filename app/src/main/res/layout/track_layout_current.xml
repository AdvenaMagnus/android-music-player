<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/color_second"
    android:paddingTop="@dimen/tracklist_track_margin_vertical"
    android:paddingBottom="@dimen/tracklist_track_margin_vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="@dimen/text_size_playlist_tracklist_big"
            android:background="@android:color/transparent"
            android:textColor="?attr/color_primary"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/song_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:textSize="@dimen/text_size_playlist_tracklist_small"
            android:background="@android:color/transparent"
            android:textColor="?attr/color_primary"
            android:gravity="right"/>

    </RelativeLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/song_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="@dimen/text_size_playlist_tracklist_small"
        android:background="@android:color/transparent"
        android:textColor="?attr/color_primary"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"/>

</LinearLayout>