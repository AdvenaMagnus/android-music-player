<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="color_primary">@color/primary</item>
        <item name="color_second">@color/second</item>

        <item name="colorPrimary">?attr/color_primary</item>
        <item name="colorPrimaryDark">?attr/color_primary</item>
        <item name="colorAccent">?attr/color_second</item>
        <item name="android:colorBackground">?attr/color_primary</item>
        <item name="android:textColor">?attr/color_second</item>
        <item name="android:color">?attr/color_second</item>
        <item name="android:textColorSecondary">?attr/color_second</item>

        <item name="android:buttonStyle">@style/BrandButtonStyleDark</item>
        <item name="buttonStyle">@style/BrandButtonStyleDark</item>
        <item name="android:listViewStyle">@style/ListViewStyleDark</item>
        <item name="android:textViewStyle">@style/TextViewStyleDark</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyleDark</item>
        <item name="checkboxStyle">@style/CheckBoxStyleDark</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="color_primary">@color/primaryLight</item>
        <item name="color_second">@color/secondLight</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">?attr/color_second</item>
    </style>

    <style name="BrandButtonStyleDark" parent="Widget.AppCompat.Button">
        <!--<item name="android:background">@drawable/button_background_2</item>-->
        <item name="android:background">@drawable/button_background</item>
        <!--<item name="android:textColor">@color/second</item>-->
        <item name="android:textColor">@drawable/button_textcolor_selector_1</item>
    </style>

    <style name="BrandButtonStyleDarkFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_2</item>
        <!--<item name="android:textColor">@color/primary</item>-->
        <item name="android:textColor">@drawable/button_textcolor_selector_2</item>
    </style>

    <style name="ListViewStyleDark" parent="Widget.AppCompat.ListView">
        <item name="android:background">?attr/color_primary</item>
        <item name="android:divider">?attr/color_second</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="TextViewStyleDark" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?attr/color_second</item>
        <item name="android:background">?attr/color_primary</item>
    </style>

    <style name="CheckBoxStyleDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/color_second</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">?attr/color_second</item>
        <item name="colorControlActivated">?attr/color_second</item>
        <item name="colorControlHighlight">?attr/color_second</item>
    </style>

</resources>
